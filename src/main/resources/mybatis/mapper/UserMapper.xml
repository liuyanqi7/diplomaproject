<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.liuyanqi.dao.IUserDao">
    <sql id="sqlCos">
        id,username,password,telphone,realname,flag
    </sql>
    <select id="checkLogin" parameterType="User" resultType="User">
        select <include refid="sqlCos"/> from t_user
        where username=#{userName} and password=#{userPass}
    </select>
</mapper>